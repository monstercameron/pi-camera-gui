        "quick_stats": {
            "auto": [
                "cameramode",
                "exposurecomp",
                "imageeffect",
                "resolution",
                "quality"
            ],
            "manual": [
                "cameramode",
                "iso",
                "shutter",
                "awb",
                "exposurecomp"
            ],
            "timelapse": [
                "cameramode",
                "timelapse_interval",
                "timelapse_count",
                "resolution",
                "quality"
            ]
        },
        "modes": [
            "auto",
            "manual",
            "timelapse"
        ],
        "mode_colors": {
            "auto": "#00FFFF",
            "manual": "#FFC864",
