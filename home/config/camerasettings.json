        "sizes": {
            "font_main": 24,
            "font_sub": 20,
            "font_stats": 18,
            "item_height_main": 60,
            "item_height_sub": 50,
            "level_0_width": 200,
            "level_1_width": 260,
            "level_2_width": 260,
            "collapsed_width": 60,
            "icon_size": 24,
            "stats_spacing": 20
