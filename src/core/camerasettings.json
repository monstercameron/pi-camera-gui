{
    "display": {
        "height": 720,
        "width": 1280,
        "caption": "Picamera GUI",
        "refreshrate": 30,
        "fontsize": 32,
        "padding": 10,
        "showmenu": false,
        "fullscreen": false,
        "animation_duration": 100
    },
    "files": {
        "template": "{}_picamera_{}",
        "path": "/home/pi/images/dcim/picamera",
        "extension": "jpg"
    },
    "mode": {
        "dev": false,
        "cameramode": "manual"
    },
    "theme": {
        "colors": {
            "menu_bg_level_0": "#000000EE",
            "menu_bg_level_1": "#111111DD",
            "menu_bg_level_2": "#222222CC",
            "selected": "#00FFFF",
            "unselected": "#FFFFFF",
            "unselected_dim": "#DDDDDD",
            "selection_bg": "#00444488",
            "stats_bg": "#00000066",
            "text_main": "#FFFFFF"
        },
        "sizes": {
            "font_main": 24,
            "font_sub": 20,
            "font_stats": 18,
            "item_height_main": 60,
            "item_height_sub": 50
        }
    },
    "buttons": [
        {
            "name": "capture",
            "description": "take photos",
            "gpio": 15,
            "event": 13
        },
        {
            "name": "keyup",
            "description": "menu up",
            "gpio": 21,
            "event": 273
        },
        {
            "name": "keyright",
            "description": "menu enter",
            "gpio": 26,
            "event": 275
        },
        {
            "name": "keydown",
            "description": "menu down",
            "gpio": 16,
            "event": 274
        },
        {
            "name": "keyleft",
            "description": "menu exit",
            "gpio": 20,
            "event": 276
        }
    ]
}