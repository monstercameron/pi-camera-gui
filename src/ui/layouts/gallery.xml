<layout>
    <!-- Gallery: Minimal menu, focus on image display -->
    <config>
        <widths level_0="60" level_1="0" level_2="0" collapsed="60" />
        <animation duration="100" />
    </config>

    <!-- Collapsed Main Menu only -->
    <container id="level_0" x="0" y="0" width="60" height="100%" 
               orientation="vertical" 
               item_height="60" 
               font_size="24"
               bg_color="#00000088" 
               selected_color="#00FFFF" 
               unselected_color="#FFFFFF" 
               selection_bg_color="#00444488"
               padding="10" />

    <!-- Hidden -->
    <container id="level_1" x="60" y="0" width="0" height="100%" 
               orientation="vertical" 
               item_height="50" 
               font_size="20"
               bg_color="#111111DD" 
               selected_color="#00FFFF" 
               unselected_color="#DDDDDD" 
               selection_bg_color="#00444488"
               padding="10" />

    <!-- Hidden -->
    <container id="level_2" x="60" y="0" width="0" height="100%" 
               orientation="vertical" 
               item_height="50" 
               font_size="20"
               bg_color="#222222CC" 
               selected_color="#00FFFF" 
               unselected_color="#DDDDDD" 
               selection_bg_color="#00444488"
               padding="10" />

    <!-- Stats -->
    <container id="stats" x="0" y="88%" width="100%" height="12%" 
               bg_color="#00000066" 
               font_size="16" 
               color="#FFFFFF"
               icon_size="20"
               spacing="15"
               padding="10" />
</layout>
