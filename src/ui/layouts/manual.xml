<layout>
    <!-- Manual Mode: Full 3-column layout with grouped options -->
    <config>
        <widths level_0="200" level_1="240" level_2="280" collapsed="60" />
        <animation duration="100" />
    </config>

    <!-- Main Menu (Left Sidebar) -->
    <container id="level_0" x="0" y="0" width="200" height="100%" 
               orientation="vertical" 
               item_height="60" 
               font_size="24"
               bg_color="#000000EE" 
               selected_color="#00FFFF" 
               unselected_color="#FFFFFF" 
               selection_bg_color="#00444488"
               padding="10" />

    <!-- Manual Submenu Groups (Exposure/Color/Image) -->
    <container id="level_1" x="200" y="0" width="240" height="100%" 
               orientation="vertical" 
               item_height="50" 
               font_size="20"
               bg_color="#111111DD" 
               selected_color="#00FFFF" 
               unselected_color="#DDDDDD" 
               selection_bg_color="#00444488"
               padding="10" />

    <!-- Value Selection (Wider for sliders) -->
    <container id="level_2" x="440" y="0" width="280" height="100%" 
               orientation="vertical" 
               item_height="50" 
               font_size="20"
               bg_color="#1A1A22DD" 
               selected_color="#00FFFF" 
               unselected_color="#DDDDDD" 
               selection_bg_color="#00444488"
               padding="10" />

    <!-- Stats (Bottom Bar) -->
    <container id="stats" x="0" y="88%" width="100%" height="12%" 
               bg_color="#00000088" 
               font_size="16" 
               color="#FFFFFF"
               icon_size="20"
               spacing="15"
               padding="10" />
</layout>
