<layout>
    <!-- Auto Mode: Simplified 2-column layout -->
    <config>
        <widths level_0="200" level_1="300" level_2="260" collapsed="60" />
        <animation duration="100" />
    </config>

    <!-- Main Menu (Left Sidebar) -->
    <container id="level_0" x="0" y="0" width="200" height="100%" 
               orientation="vertical" 
               item_height="60" 
               font_size="24"
               bg_color="#000000EE" 
               selected_color="#00FFFF" 
               unselected_color="#FFFFFF" 
               selection_bg_color="#00444488"
               padding="10" />

    <!-- Auto Options (Wider panel for quick access) -->
    <container id="level_1" x="200" y="0" width="300" height="100%" 
               orientation="vertical" 
               item_height="55" 
               font_size="22"
               bg_color="#0A1A1AEE" 
               selected_color="#00FFFF" 
               unselected_color="#CCCCCC" 
               selection_bg_color="#00666644"
               padding="12" />

    <!-- Value Selection -->
    <container id="level_2" x="500" y="0" width="260" height="100%" 
               orientation="vertical" 
               item_height="50" 
               font_size="20"
               bg_color="#222222CC" 
               selected_color="#00FFFF" 
               unselected_color="#DDDDDD" 
               selection_bg_color="#00444488"
               padding="10" />

    <!-- Stats (Bottom Bar) -->
    <container id="stats" x="0" y="88%" width="100%" height="12%" 
               bg_color="#00000088" 
               font_size="16" 
               color="#FFFFFF"
               icon_size="20"
               spacing="15"
               padding="10" />
</layout>
